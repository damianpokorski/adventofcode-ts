{
  "jestrunner.jestCommand": "npm run test --",
  "search.useIgnoreFiles": true,
  // Heavily opinionated vscode settings to enforce consistency
  // Enforce biome formatting
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  // Indent config, 2 spaces
  "editor.indentSize": "tabSize",
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.autoIndent": "advanced",
  "editor.insertSpaces": true,
  "editor.rulers": [
    80
  ],
  // No sideways scrolling
  "editor.wordWrap": "on",
  // Hide gitignored files from explorer, you should have them
  "explorer.excludeGitIgnore": true,
  // Inlay type hints -
  "editor.inlayHints.enabled": "on",
  "typescript.inlayHints.enumMemberValues.enabled": false,
  "typescript.inlayHints.parameterNames.enabled": "none",
  "typescript.inlayHints.functionLikeReturnTypes.enabled": false,
  "typescript.inlayHints.variableTypes.enabled": false,
  "typescript.inlayHints.parameterTypes.enabled": false,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": false,
  // Prefer barrel imports oven relative
  "typescript.preferences.importModuleSpecifierEnding": "auto",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  // Fix all and organise imports, remove unused
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "always",
    "source.organizeImports.biome": "always",
    "source.sortImports": "always",
    "source.removeUnusedImports": "always"
  },
  // Bun config
  "bun.runtime": "bun",
  "bun.debugTerminal.enabled": true,
  "bun.debugTerminal.stopOnEntry": false,
  "bun.test.filePattern": "**/*{.test.,.spec.,_test_,_spec_}{js,ts,tsx,jsx,mts,cts}",
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  }
}